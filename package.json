  "scripts": {
    "npm-gui": "npm-gui localhost:8888",
    "yarn:install": "yarn --silent",
    "prebuild": "rimraf dist && yarn lint",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "typeorm-win": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm-win migration:generate --config postgres-ormconfig.js -n ",
    "migration:run": "yarn typeorm-win migration:run --config postgres-ormconfig.js",
    "migrate:main": "yarn typeorm migration:run --config postgres-ormconfig.js"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/graphql": "^7.1.5",
    "@nestjs/platform-fastify": "^7.0.7",
    "@nestjs/typeorm": "^7.0.0",
    "apollo-server-core": "^2.11.0",
    "apollo-server-fastify": "^2.11.0",
    "class-validator": "^0.11.1",
    "fastify-static": "^2.6.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "graphql-type-json": "^0.3.1",
    "moment": "^2.24.0",
    "nest-winston": "^1.3.3",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.24",
    "typeorm-transactional-cls-hooked": "^0.1.12",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "3.5.30",
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "25.1.4",
    "@types/mongoose": "5.7.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "npm-gui": "^2.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
